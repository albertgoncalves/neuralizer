#!/usr/bin/env bash

if [ $(uname -s) = "Darwin" ]; then
    alias ls='ls --color=auto'
    alias ll='ls -l'
else
    alias open="xdg-open"
fi

if [ ! -e node_modules/.bin/jshint ]; then
    npm install --save-dev jshint
fi

fmt () {
    for f in src/js/*.js; do
        echo $f
        jshint $f
        clang-format -i $f
    done
}

export PATH="$PWD/node_modules/.bin/:$PATH"
export WD=$(pwd)
export HTML_TIDY="$WD/.tidyrc"
export -f fmt
